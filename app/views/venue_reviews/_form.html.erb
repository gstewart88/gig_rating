<%= form_for(@venue_review) do |f| %>
<%= f.label :title, 'Review Title:' %>
<%= f.text_field :title %><br />
<%= f.label :venue_id %>
<%= f.select :venue_id, Venue.all.map { |c| [c.name, c.id] } %><br />
<%= f.label :description, 'Review:' %>
<%= f.text_field :description, :size=>"500",:maxlength=>"300" %><br />
