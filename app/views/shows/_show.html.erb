<div>

  <div>

    <p><strong>Show Name: </strong><%= show.name%></p>

    <p><strong>Category: </strong> <%= show.category.try :name %></p>
    
    <p><%= image_tag show.show_img.medium.url %></p>
  
    <p>
      <%= button_to('Show', show, method: :get)%>
      <%#= button_to('Edit', edit_show_path(show), method: :get) %>
      <%#= button_to('Delete', show_path(show), method: :delete) %>
      <li><%= button_to('Edit', edit_show_path(show), method: :get) if can? :manage, Show %></li>
      <li><%= button_to('Delete', show_path(show), method: :delete, data:{confirm: 'Delete the show? Are you sure?'}) if can? :delete, Show %></li>
    </p>
  </div>
</div>
