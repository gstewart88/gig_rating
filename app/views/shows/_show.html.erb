<div class="box box-4 thumbnail">
  <div class="thumbnail-label"><%= show.name %></div>
  <%= image_tag show.show_img.gridlist.url %>
  <%= button_to('Show', show, method: :get, class: "thumbnail-buttons form-1")%>
  <li><%= button_to('Edit', edit_show_path(show), method: :get, class: "thumbnail-buttons form-2") if can? :manage, Show %></li>
  <li><%= button_to('Delete', show_path(show), method: :delete, data:{confirm: 'Delete the show? Are you sure?'}, class: "thumbnail-buttons form-3") if can? :delete, Show %></li>
</div>