<div class="box box-4 thumbnail">
  <div class="thumbnail-label"><%= category.name %></div>
  <img class="thumbnail-img" src="https://reddingtalent.files.wordpress.com/2011/06/tragedycomedy.jpg">
  <%= button_to('Delete', category_path(category), method: :delete, data:{confirm: 'Delete the category? Are you sure?'}, class: "thumbnail-buttons form-3") if can? :delete, Category %>
  <%= button_to('Edit', edit_category_path(category), method: :get, class: "thumbnail-buttons form-2") if can? :manage, Category %>
  <%= button_to("Show", category_path(category), method: :get, class: "thumbnail-buttons form-1") %>
</div>