<%= form_for(@category) do |f| %>
<%= f.label :name, 'Category Name:' %>
<%= f.text_field :name %><br />
<%= f.label :genre_id %>
<%= f.select :genre_id, Genre.all.map { |c| [c.name, c.id] } %><br />
<%= f.label :category_img, 'Show Image' %>
<%= f.file_field :category_img %><br />
</br>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>