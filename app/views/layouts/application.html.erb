<!DOCTYPE html>
<html>
<head>
  <title>GigRating</title>
  <%= stylesheet_link_tag    'application',  media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src = "http://maps.googleapis.com/maps/api/js?key=AIzaSyAvhtvLleDoIeay7mQKesQ48Yz8zd_Uk5g"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

</head>
<body>


  <div class="container">

    <div class="navleft">
      <%= link_to image_tag("/site_images/weview_logo.png", :width=> '45%'), root_path %>
    </div>

    <div class="navmiddle">
      <%= render partial: "layouts/menu"%>
    </div>
    <div class="topmiddle">
      <% if user_signed_in? %>
      <nav class="logged-in">
        <ul>
          <li><%= link_to "Shows", shows_path %></li>
          <li><%= link_to "Venues", venues_path %></li>
          <li><%= link_to "Performances", performances_path %></li>
          <li><%= link_to "Show Reviews", show_reviews_path %></li>
          <li><%= link_to "Venue Reviews", venue_reviews_path %></li>
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </nav>
      <% else %>
    <nav class="logged-out">
      <ul>
        <li><%= link_to "Shows", shows_path %></li>
        <li><%= link_to "Venues", venues_path %></li>
        <li><%= link_to "Performances", performances_path %></li>
        <li><%= link_to "Show Reviews", show_reviews_path %></li>
        <li><%= link_to "Venue Reviews", venue_reviews_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      </ul>
    </nav>
  <% end %>
  </div>


  <div id="overlay"></div>

  <div id="specialBox">
    <p><%= render 'home/about_us' %></p> 
    <button class='toggleOverlay'>Close</button>
  </div>
  <div id="specialBoxb">
    <p><%= render 'home/privacy' %></p> 
    <button data-b='b' class='toggleOverlay'>Close</button>
  </div>


  <br>
  <%= yield %>
  <br>
  <div class="notice-messages">
    <p class="notice" style="color:white;"><%= notice %></p>
    <p class="alert" style="color:white;"><%= alert %></p>
  </div>
</div>

<div class="footerboxes">
  <div id="aboutUsBox" class="aboutUsBox">
    <button class='toggleOverlay'>About Us</button>
  </div>

  <div id="privacyBox" class="privacyBox">
    <button data-b='b' class='toggleOverlay'>Privacy</button>
  </div>
</div>

</body>
</html>