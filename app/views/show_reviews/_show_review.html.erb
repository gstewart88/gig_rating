<div class="box">
<p><%= show_review.show.name %></p>
<p><%= show_review.title %></p>
<%= "★"*show_review.rating %><%= "☆"*(5 - show_review.rating) %>
<p>
  <%= button_to('Show', show_review, method: :get) %>
  <%= button_to('Edit', edit_show_review_path(show_review), method: :get)  %>
  <%= button_to('Delete review', show_review_path(show_review), method: :delete) %>
</p>
</div>