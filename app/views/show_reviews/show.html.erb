<div>
<p><strong>Show Name: </strong><%= @show_review.show.name %></p>
<p><strong>Review Rating: </strong><%= "★"*@show_review.rating %><%= "☆"*(5 - @show_review.rating) %></p>
<p><strong>Review Title: </strong><%= @show_review.title %></p>
<p><strong>By: </strong><%= @show_review.user.email %> on <%= (@show_review.created_at).strftime("%d %B %Y") %></p>

<% if user_signed_in? %>
  <p><strong>Review: </strong><%= @show_review.description %></p>
<% else %>
  <p><strong>Review: </strong><%= "#{@show_review.description[0...5]}..."  %></p>
  <button id="read_more">Read More</button>
<% end %>

  <div class="menu">
    <ul>
    <li><strong><%= link_to 'Edit', edit_show_review_path(@show_review) if can? :manage, Show  %></strong></li>
    <li><strong><%= link_to 'Back', show_reviews_path %></strong></li>
    </ul>

  </div>

</div>